<%-include('navbar.ejs')%>

<form action="/admin/update_home_information" method="post" enctype="multipart/form-data">
    <div class="container-fluid bg-white p-3 shadow">
        <div class="row">
            <div class="col-md-12">
                <h3 class="heading">Home Information</h3>
            </div>
            <div class="col-md-4 mb-3">
                Your Name
                <input class="form-control" type="text" name="your_name" value="<%=home_info.your_name%>">  
            </div>
          
            <div class="col-md-3 mb-3">
                Home Logo
                <input class="form-control" disabled type="file" accept="image/*" name="home_logo">
         </div>
            <div class="col-md-1">
                <img src="" width="100%" class="mt-2">  
            </div>
           
            
            <div class="col-md-4 mb-3">
                 Facebook Link
                <input class="form-control" type="text"  name="facebook_link" value="<%= home_info.facebook_link%>">
            </div> 
            
            <div class="col-md-4 mb-3">
               Whatsapp Link
                <input class="form-control" type="text"  name="whatsapp_link" value="<%= home_info.whatsapp_link%>">
            </div> 
            <div class="col-md-4 mb-3">
             Instagram Link
                <input class="form-control" type="text"  name="instagram_link" value="<%= home_info.instagram_link%>">
            </div>
            <div class="col-md-4 mb-3">
             Linkedin Link
                <input class="form-control" type="text"  name="linkedin_link" value="<%= home_info.linkedin_link%>">
            </div>
           
            <div class="col-md-12 mb-3 text-center">
                <button class="btn btn-primary">Update Information</button>
            </div>
        </div>
    </div>
</form>


<%-include('footer.ejs')%>
